[module/music]
type = custom/script
interval = 1

label = %output:0:50:...%
label-font = 5

exec = ~/.config/polybar/music.sh

[module/clock]
type = internal/date
date = %%{T3}%H:%M%%{T-}

label-padding = 1
label-font = 5
format-background = ${colors.mediumgrey}
format-foreground = ${colors.white}

[module/date]
type = internal/date
interval = 5

date = "%Y-%m-%d"

label = %date% 
label-padding = 2
label-font = 5
label-background = ${colors.mediumgrey}
label-foreground = ${colors.white}

[module/network]
type = internal/network
interface = wlp3s0

interval = 3.0
udspeed-minwidth = 1
accumulate-stats = true

format-connected = <label-connected>
format-disconnected = <label-disconnected>
format-packetloss = <animation-packetloss> <label-connected>
label-connected-font = 5
label-connected =  %downspeed% 
label-connected-foreground = ${colors.lightgrey}
label-connected-padding = 1
label-disconnected-font = 1
label-disconnected = * 
label-disconnected-foreground = ${colors.red}
label-disconnected-padding = 1

[module/battery]

type=internal/battery

full-at=99

battery=BAT1
adapter=ACAD

font = 5

label-charging-font = 5
label-charging-foreground = ${colors.lightgrey}
label-charging = %percentage%%
label-charging-padding = 1

label-discharging-font = 5
label-discharging-foreground = ${colors.lightgrey}
label-discharging = %percentage%%
label-discharging-padding = 2

[module/pkg]

