label-foreground = ${colors.foreground}
label-font = 3
label-padding = 1

[module/i3]
type = internal/i3
;format = <label-state> <label-mode>
format = <label-state>
index-sort = true
wrapping-scroll = false

;label-mode = " "
label-mode = "*"
